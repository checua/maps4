
@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registrarse</h1>
<form asp-controller="Inicio" asp-action="Registrarse" method="post">
    <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" id="correo" />
    <input class="form-control mb-3" type="text" placeholder="Nombres" required name="nombres" />
    <input class="form-control mb-3" type="text" placeholder="Apellido paterno" required name="aPaterno" />
    <input class="form-control mb-3" type="text" placeholder="Apellido materno" required name="aMaterno" />
    <input class="form-control mb-3" type="text" placeholder="Apellido paterno" required name="aPaterno" />
    <div class="dropdown">
        <select class="form-control" id="cboInmobiliaria"></select>
    </div>
    <input class="form-control mb-3" type="text" placeholder="nick" required name="nick" />
    <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="contra" />
    <input class="form-control mb-3" type="password" placeholder="Repetir contraseña" />
    <input class="form-control mb-3" type="text" placeholder="Teléfono" required name="telefono" />
    <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
    <input class="form-control mb-3" type="text" placeholder="Foto" required name="foto" />
    <input class="form-control mb-3" type="text" placeholder="Fecha de nacimiento" required name="dob" />
    <input class="form-control mb-3" type="text" placeholder="Revisado" required name="revisado" />
    <div class="d-grid gap-2 mb-3">
        <button class="btn btn-primary" type="submit">Registrate</button>
    </div>
    @if (ViewData["Mensaje"] != null)
    {

        <div class="form-group">
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        </div>
    }
    ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>

</form>

